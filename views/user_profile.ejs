<h1>Codeial / Profile</h1>
<h2> Welcome to Codeial </h2>

<img src="<%=user.avatar%>" alt="<%=user.name%>" height="200" width="200">
<%if(locals.user && locals.user.id==profile_user.id){%>
    <form action="/users/update?id=<%=profile_user.id%>" enctype="multipart/form-data" method="POST">
        <input type="text" name="name" id="name" placeholder="Update Name"
         value="<%=profile_user.name%>" required>
        <input type="email" name="email" id="email" placeholder="Update Email"
         value="<%=profile_user.email%>" required>
        <input type="file" name="avatar" placeholder="Profile Picture">
        <button>Update</button>
    </form>
<%}else {%>
    <p><%=profile_user.name%></p>
    <p><%=profile_user.email%></p>
<%}%>
